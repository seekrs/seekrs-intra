{
	"private": true,
	"scripts": {
		"build": "NODE_NO_WARNINGS=1 parcel build",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint source/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "NODE_NO_WARNINGS=1 parcel watch --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off",
			"import/no-unassigned-import": "off",
			"n/file-extension-in-import": "off",
			"max-params": "off",
			"@typescript-eslint/object-curly-spacing": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo"
		],
		"rules": {}
	},
	"dependencies": {
		"webext-base-css": "^2.0.1",
		"webext-options-sync": "^4.2.3",
		"webextension-polyfill": "^0.12.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.13.0",
		"@parcel/resolver-default": "^2.13.0",
		"@parcel/transformer-typescript-tsc": "^2.13.3",
		"@tailwindcss/postcss": "^4.0.9",
		"@types/firefox-webext-browser": "^120.0.4",
		"npm-run-all2": "^7.0.1",
		"parcel": "^2.13.0",
		"postcss": "^8.2.1",
		"stylelint": "^16.6.1",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^1.0.2",
		"svgo": "^3",
		"tailwindcss": "^4.0.9",
		"xo": "^0.59.3"
	},
	"@parcel/resolver-default": {
		"packageExports": true
	},
	"targets": {
		"default": {
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://intra.42.fr"
			]
		}
	}
}
