{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"name": "Improved Seekrs",
	"version": "3.0.0-indev",
	"description": "But what if it was purple..?",
	"homepage_url": "https://ext.seekrs.top",
	"manifest_version": 3,
	"minimum_chrome_version": "121",
	"browser_specific_settings": {
		"gecko": {
			"id": "awesome-extension@notlmn.github.io",
			"strict_min_version": "103.0"
		}
	},
	"icons": {
		"128": "assets/icon.png"
	},
	"permissions": [
		"storage", "declarativeNetRequest", "declarativeNetRequestWithHostAccess"
	],
	"host_permissions": [
		"*://*.intra.42.fr/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://*.intra.42.fr/*" ],
			"js": [ "content.js" ],
			"css": [ "content.css" ],
			"run_at": "document_end"
		}
	],
	"options_ui": {
		"page": "options.html"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module",
		"scripts": [ "background.js" ]
	}
}
