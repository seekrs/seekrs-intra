{
	"$schema": "https://json.schemastore.org/chrome-manifest",
	"name": "Seekrs' Intra",
	"version": "3.0.0",
	"description": "But what if it was purple..?",
	"homepage_url": "https://ext.seekrs.top",
	"manifest_version": 3,
	"minimum_chrome_version": "121",
	"browser_specific_settings": {
		"gecko": {
			"id": "intra@seekrs.top",
			"strict_min_version": "103.0"
		}
	},
	"icons": {
		"300": "assets/icon.png"
	},
	"permissions": [
		"storage", "declarativeNetRequest", "declarativeNetRequestWithHostAccess"
	],
	"host_permissions": [
		"*://*.intra.42.fr/*"
	],
	"content_scripts": [
		{
			"matches": [ "https://*.intra.42.fr/*" ],
			"run_at": "document_end"
		}
	],
	"action": {
		"default_icon": {
			"300": "assets/icon.png"
		},
		"default_title": "Seekrs' Intra",
		"default_popup": "menu/menu.html"
	},
	"background": {
		"service_worker": "sw/worker.js",
		"type": "module",
		"scripts": [ "sw/worker.js" ]
	}
}
